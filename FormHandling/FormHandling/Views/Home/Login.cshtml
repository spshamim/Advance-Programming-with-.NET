@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_BeforeLogin.cshtml";
}
<hr />
<h2>Login</h2>
<hr />
<form action="" method="post">
    <input type="text" class="form-control" name="Uname" value="@Model.Uname" placeholder="Username" />
    <span>@Html.ValidationMessage("Uname")</span>
    <input type="password" class="form-control" name="Pass" value="@Model.Pass" placeholder="Password" />
    <span>@Html.ValidationMessage("Pass")</span>
    <!--its okey, but problem is value is gone.. so we need to implement retrieve functionality..-->
    <br /><input type="submit" class="btn btn-success" value="Login" />
</form>
<hr />
<br />
@if (ViewBag.Msg != null)
{
    <span class="alert alert-danger">@ViewBag.Msg</span>
    <br />
}
@if (TempData["Smg2"] != null)
{
    <span class="alert alert-success">@TempData["Smg2"]</span>
    <br />
}
