<h2>Create</h2><hr />
<form action="" method="post">
    <!-- receive/submit in same page -->
    <input type="text" name="Name" placeholder="Name" class="form-control" />
    <input type="text" name="Email" placeholder="Email" class="form-control" />
    Gender:
    <input type="radio" name="Gender" value="Male" />Male
    <input type="radio" name="Gender" value="Female" />Female
    <br />
    Profession:
    <select name="Profession" class="form-control">
        <option disabled selected>Select</option>
        <option>Student</option>
        <option>Business</option>
        <option>Teacher</option>
    </select>
    Hobbies:
    <input type="checkbox" value="Traveling" name="Hobbies" /> Traveling
    <input type="checkbox" value="Sports" name="Hobbies" /> Sports
    <input type="checkbox" value="Gaming" name="Hobbies" /> Gaming
    <br />
    <input type="submit" value="Register" class="btn btn-primary" />
</form><hr />
<h2>Name : @ViewBag.Name</h2>
<h2>Email : @ViewBag.Email</h2>
<h2>Profession: @ViewBag.Profession</h2>
<h2>Gender : @ViewBag.Gender</h2>
<h2>Hobbies : @ViewBag.Hobbies</h2>

