<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Blog System</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/site.css" rel="stylesheet" />
    <style>
        body {
            display: flex;
            min-height: 100vh;
            margin: 0;
        }

        .sidebar {
            position: fixed;
            width: 210px;
            height: 100%;
            background-color: #dfe0e1;
            border-right: 3px solid #0dcaf0;
            padding: 30px; /* Add padding to the sidebar */
        }

            .sidebar .nav {
                margin: 0;
                padding: 0;
                list-style: none;
            }

            .sidebar .nav-item {
                margin-bottom: 15px; /* Space between list items */
            }

                .sidebar .nav-item .btn {
                    width: 100%; /* Make buttons take full width */
                }

        .container {
            margin-left: 250px;
            padding: 15px;
            width: calc(100% - 250px);
        }
    </style>
</head>
<body>
    <div class="sidebar">
        <ul class="nav flex-column">
            <li class="nav-item">
                <a class="btn btn-info" href="/Blog/PProfile">Manage Profile</a>
            </li>
            <li class="nav-item">
                <a class="btn btn-info" href="/Blog/ViewBlogs">View All Blogs</a>
            </li>
            <li class="nav-item">
                <a class="btn btn-info" href="/Blog/ManageBlogs">Manage Blogs</a>
            </li>
            <li class="nav-item">
                <a class="btn btn-info" href="/User/Create">Publish Blog</a>
            </li>
            <li class="nav-item">
                <a class="btn btn-danger" href="/User/Logout">Logout</a>
            </li>
        </ul>
    </div>
    <div class="container">
        @RenderBody()
    </div>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>
